<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mayu.sendwhatsappmessage.MainActivity">


    <EditText
        android:id="@+id/edcontact"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/edcontact"
        android:textColorHint="@color/colorAccent"
        android:textColor="@color/colorPrimaryDark"/>

    <EditText
        android:id="@+id/edmessage"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edcontact"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="@string/edtext"
        android:textColorHint="@color/colorAccent"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/btsend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edmessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:text="@string/btsend"
        android:textColor="@color/colorPrimaryDark"/>
</RelativeLayout>
